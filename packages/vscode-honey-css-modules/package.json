{
  "name": "vscode-honey-css-modules",
  "displayName": "vscode-honey-css-modules",
  "description": "The VS Code extension for CSS Modules",
  "version": "0.0.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/honey-css-modules.git",
    "directory": "packages/vscode-honey-css-modules"
  },
  "author": "mizdra <pp.mizdra@gmail.com>",
  "publisher": "mizdra",
  "license": "MIT",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css"
  ],
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "ts-honey-css-modules-plugin",
        "configNamespace": "typescript",
        "languages": [
          "css"
        ]
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "typescript.openTsServerLog",
          "when": "editorLangId == css"
        },
        {
          "command": "typescript.restartTsServer",
          "when": "editorLangId == css"
        }
      ]
    }
  },
  "dependencies": {
    "ts-honey-css-modules-plugin": "../ts-plugin"
  }
}
