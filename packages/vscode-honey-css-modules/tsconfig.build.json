{
  "extends": "./tsconfig.json",
  "include": ["src"], // Avoid bin/ and configuration files.
  "exclude": ["src/**/*.test.ts", "src/**/__snapshots__", "src/test"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "src", // To avoid inadvertently changing the directory structure under dist/.
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "references": [
    {
      "path": "../ts-honey-css-modules-plugin/tsconfig.build.json"
    }
  ]
}
